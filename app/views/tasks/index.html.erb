<div class="wrap">
	<div class="container">
		<h1>My task list</h1>
		<h6><em>Stop procrastinating and start working on these to-dos!</em></h6>
		<div class="container-tasks">
				<% @tasks.each do |task| %>
					<div class="task">
						<div class="checkbox">			
							<% if task.completed %>
								<h2><%= link_to togglestatus_path(task), method: :patch do %>
									<i class="fas fa-check-square"></i>
								<% end %>
								</h2>
							<% else %>
								<h2><%= link_to togglestatus_path(task), method: :patch do %>
									<i class="far fa-square"></i>
									<% end %>
								</h2>
							<% end %>
						</div>
						<div class="task-display">
							<h3><%= task.title %></h3>
							<ul class="list-inline">
								<li class="list-inline-item">
									<%= link_to "More details", task_path(task) %>
								</li>
								<li class="list-inline-item">     </li>
								<li class="list-inline-item">
									<%= link_to delete_path(task), method: :delete, data: { confirm: "Are you sure you want to delete this task? \n #{task.title}" } do %>
									<i class='far fa-trash-alt'></i>
								<% end %> 
								</li>	
							</ul>
						</div>
					</div>
				<% end %>
				<%= link_to new_path do %>
				<div class="task" id="add-a-task">
					<div class="checkbox">
						<h2><i class="far fa-plus-square"></i></h2>
					</div>
					<div class="task-display">
						<h3>Add a new task</h3>
					</div>
				</div>
				<% end %>
		</div>
	</div>
</div>